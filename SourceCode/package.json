{
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "npm run lint --prefix frontend && npm run lint --prefix backend"
  },
  "lint-staged": {
    "frontend/src/**/*.{js,jsx}": [
      "eslint --fix --config eslint.config.mjs"
    ],
    "backend/**/*.js": [
      "eslint --fix --config eslint.config.mjs"
    ]
  }
}
